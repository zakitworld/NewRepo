<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineVoting_and_Ticketing_app.Views.Polls.PollDetailsPage"
             Title="Poll Details"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Poll Header -->
            <Border
                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray800}}"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 15"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                Padding="20">
                <VerticalStackLayout Spacing="15">

                    <!-- Status Badge -->
                    <Border
                        x:Name="StatusBorder"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="0"
                        BackgroundColor="#10B981"
                        Padding="12,6"
                        HorizontalOptions="Start">
                        <Label
                            x:Name="StatusLabel"
                            Text="Active"
                            TextColor="White"
                            FontSize="12"
                            FontAttributes="Bold" />
                    </Border>

                    <!-- Poll Title -->
                    <Label
                        x:Name="TitleLabel"
                        FontSize="24"
                        FontAttributes="Bold"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                        LineBreakMode="WordWrap" />

                    <!-- Poll Description -->
                    <Label
                        x:Name="DescriptionLabel"
                        FontSize="15"
                        TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}"
                        LineBreakMode="WordWrap"
                        LineHeight="1.4" />

                    <!-- Creator Info -->
                    <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                        <Border
                            StrokeShape="RoundRectangle 20"
                            StrokeThickness="1"
                            Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}"
                            WidthRequest="40"
                            HeightRequest="40"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray800}}">
                            <Label
                                Text="ðŸ‘¤"
                                FontSize="20"
                                HorizontalOptions="Center"
                                VerticalOptions="Center" />
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label
                                Text="Created by"
                                FontSize="12"
                                TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}" />
                            <Label
                                x:Name="CreatorLabel"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <!-- Poll Info -->
                    <VerticalStackLayout Spacing="10" Margin="0,10,0,0">
                        <HorizontalStackLayout Spacing="8">
                            <Label
                                Text="ðŸ“Š"
                                FontSize="16" />
                            <Label
                                x:Name="VoteCountLabel"
                                Text="0 votes"
                                FontSize="14"
                                TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="8">
                            <Label
                                Text="ðŸ“…"
                                FontSize="16" />
                            <Label
                                x:Name="DurationLabel"
                                FontSize="14"
                                TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="8">
                            <Label
                                Text="â°"
                                FontSize="16" />
                            <Label
                                x:Name="TimeRemainingLabel"
                                FontSize="14"
                                TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <!-- Poll Settings -->
                    <HorizontalStackLayout Spacing="15" Margin="0,10,0,0">
                        <Border
                            x:Name="MultipleChoiceBadge"
                            IsVisible="False"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0"
                            BackgroundColor="#8B5CF6"
                            Padding="8,4">
                            <Label
                                Text="Multiple Choice"
                                TextColor="White"
                                FontSize="11"
                                FontAttributes="Bold" />
                        </Border>

                        <Border
                            x:Name="AnonymousBadge"
                            IsVisible="False"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0"
                            BackgroundColor="#F59E0B"
                            Padding="8,4">
                            <Label
                                Text="Anonymous"
                                TextColor="White"
                                FontSize="11"
                                FontAttributes="Bold" />
                        </Border>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!-- Voting Section (Visible before voting) -->
            <VerticalStackLayout
                x:Name="VotingSection"
                Spacing="15">

                <Label
                    Text="Cast Your Vote"
                    FontSize="20"
                    FontAttributes="Bold"
                    TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                <Label
                    x:Name="VotingInstructionsLabel"
                    Text="Select one option below"
                    FontSize="14"
                    TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />

                <VerticalStackLayout
                    x:Name="OptionsContainer"
                    Spacing="12" />

                <Button
                    x:Name="SubmitVoteButton"
                    Text="Submit Vote"
                    Clicked="OnSubmitVoteClicked"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Margin="0,10,0,0" />

            </VerticalStackLayout>

            <!-- Results Section (Visible after voting or if poll closed) -->
            <VerticalStackLayout
                x:Name="ResultsSection"
                Spacing="15"
                IsVisible="False">

                <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                    <Label
                        Text="Poll Results"
                        FontSize="20"
                        FontAttributes="Bold"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                        HorizontalOptions="StartAndExpand" />

                    <Label
                        x:Name="ResultsVoteCountLabel"
                        Text="0 votes"
                        FontSize="14"
                        TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <VerticalStackLayout
                    x:Name="ResultsContainer"
                    Spacing="15" />

                <Label
                    x:Name="ThankYouLabel"
                    Text="âœ“ Thank you for voting!"
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="#10B981"
                    HorizontalOptions="Center"
                    IsVisible="False"
                    Margin="0,10,0,0" />

            </VerticalStackLayout>

            <!-- Already Voted Message -->
            <Border
                x:Name="AlreadyVotedSection"
                IsVisible="False"
                StrokeShape="RoundRectangle 12"
                StrokeThickness="1"
                Stroke="#F59E0B"
                BackgroundColor="{AppThemeBinding Light=#FEF3C7, Dark=#78350F}"
                Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="âœ“ You've Already Voted"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="#F59E0B" />
                    <Label
                        Text="You have already cast your vote in this poll. View the results below."
                        FontSize="14"
                        TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}"
                        LineHeight="1.4" />
                </VerticalStackLayout>
            </Border>

            <!-- Error Message -->
            <Label
                x:Name="ErrorLabel"
                TextColor="Red"
                FontSize="14"
                IsVisible="False"
                HorizontalTextAlignment="Center"
                Margin="0,10,0,0" />

            <!-- Loading Indicator -->
            <ActivityIndicator
                x:Name="LoadingIndicator"
                IsRunning="False"
                IsVisible="False"
                Color="{StaticResource Primary}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
