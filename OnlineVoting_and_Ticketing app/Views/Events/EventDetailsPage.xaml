<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             x:Class="OnlineVoting_and_Ticketing_app.Views.Events.EventDetailsPage"
             Title="Event Details"
             BackgroundColor="{StaticResource Background}">

    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="0">

                <!-- Cinematic Header -->
                <Grid HeightRequest="400">
                    <ffimageloading:CachedImage x:Name="EventImage" Aspect="AspectFill" />
                    <Rectangle Fill="{StaticResource Background}" Opacity="0.3"/>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="Transparent" Offset="0" />
                        <GradientStop Color="{StaticResource Background}" Offset="1" />
                    </LinearGradientBrush>
                    
                    <VerticalStackLayout VerticalOptions="End" Padding="25" Spacing="10">
                        <Border StrokeShape="RoundRectangle 8" StrokeThickness="0" 
                                BackgroundColor="{StaticResource Primary}" Padding="15,6" HorizontalOptions="Start">
                            <Label x:Name="CategoryLabel" TextColor="White" FontSize="11" FontAttributes="Bold" CharacterSpacing="1"/>
                        </Border>
                        <Label x:Name="TitleLabel" Style="{StaticResource Headline}" FontSize="28" HorizontalOptions="Start" TextColor="{StaticResource White}"/>
                    </VerticalStackLayout>
                </Grid>

                <!-- Content Area -->
                <VerticalStackLayout Padding="25" Spacing="30">
                    
                    <!-- Glass Info Grid -->
                    <Border Style="{StaticResource Border}" Padding="0">
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Padding="20" RowSpacing="20">
                            <!-- Date -->
                            <HorizontalStackLayout Grid.Column="0" Spacing="15">
                                <Label Text="ðŸ“…" FontSize="20" VerticalOptions="Center" Opacity="0.7"/>
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label x:Name="DateLabel" TextColor="{StaticResource White}" FontSize="14" FontAttributes="Bold"/>
                                    <Label Text="DATE &amp; TIME" TextColor="{StaticResource TextSecondary}" FontSize="9" FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            
                            <!-- Location -->
                            <HorizontalStackLayout Grid.Column="1" Spacing="15">
                                <Label Text="ðŸ“" FontSize="20" VerticalOptions="Center" Opacity="0.7"/>
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label x:Name="LocationLabel" TextColor="{StaticResource White}" FontSize="14" FontAttributes="Bold" LineBreakMode="TailTruncation"/>
                                    <Label Text="LOCATION" TextColor="{StaticResource TextSecondary}" FontSize="9" FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <!-- Organizer -->
                            <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="15">
                                <Border WidthRequest="36" HeightRequest="36" StrokeShape="RoundRectangle 18" 
                                        Background="{StaticResource Surface}" StrokeThickness="0">
                                    <Label Text="ðŸ‘¤" HorizontalOptions="Center" VerticalOptions="Center" FontSize="16"/>
                                </Border>
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label x:Name="OrganizerLabel" TextColor="{StaticResource White}" FontSize="14" FontAttributes="Bold"/>
                                    <Label Text="ORGANIZER" TextColor="{StaticResource TextSecondary}" FontSize="9" FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <!-- Availability -->
                            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="15">
                                <Label Text="ðŸŽŸï¸" FontSize="20" VerticalOptions="Center" Opacity="0.7"/>
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label x:Name="TicketsLabel" TextColor="{StaticResource White}" FontSize="14" FontAttributes="Bold"/>
                                    <Label Text="AVAILABILITY" TextColor="{StaticResource TextSecondary}" FontSize="9" FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>

                    <!-- About Section -->
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Description" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource White}"/>
                        <Label x:Name="DescriptionLabel" FontSize="15" LineHeight="1.5" TextColor="{StaticResource TextSecondary}"/>
                    </VerticalStackLayout>

                    <!-- Tickets Section -->
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Admission Tickets" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource White}"/>
                        
                        <CollectionView x:Name="TicketTypesCollectionView" SelectionMode="None">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="15" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource Border}" Padding="20">
                                        <Grid ColumnDefinitions="*,Auto" RowSpacing="10">
                                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                                <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource White}"/>
                                                <Label Text="{Binding Description}" FontSize="12" TextColor="{StaticResource TextSecondary}"/>
                                                <Label Text="{Binding AvailableQuantity, StringFormat='{0} slots remaining'}" 
                                                       FontSize="11" TextColor="{StaticResource Primary}" Margin="0,5,0,0" FontAttributes="Bold"/>
                                            </VerticalStackLayout>
                                            
                                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End">
                                                <Label Text="{Binding Price, StringFormat='GHâ‚µ {0:N0}'}" 
                                                       FontSize="20" FontAttributes="Bold" 
                                                       TextColor="{StaticResource White}"/>
                                                <Label Text="per person" FontSize="10" TextColor="{StaticResource TextSecondary}" HorizontalOptions="End"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Purchase Glass Bar -->
        <Border Grid.Row="1" BackgroundColor="{StaticResource Surface}" Padding="25,20,25,35" 
                StrokeThickness="1" Stroke="{StaticResource GlassBorderBrush}" StrokeShape="RoundRectangle 24,24,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout VerticalOptions="Center">
                    <Label Text="ESTIMATED TOTAL" TextColor="{StaticResource TextSecondary}" FontSize="10" FontAttributes="Bold" CharacterSpacing="1"/>
                    <Label Text="GHâ‚µ 0.00" x:Name="TotalPriceLabel" TextColor="{StaticResource White}" FontSize="22" FontAttributes="Bold"/>
                </VerticalStackLayout>
                <Button x:Name="BuyTicketButton" Grid.Column="1" Text="GET TICKETS" 
                        Style="{StaticResource Button}" HeightRequest="56" WidthRequest="180"
                        Clicked="OnBuyTicketClicked"/>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
