<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             x:Class="OnlineVoting_and_Ticketing_app.Views.Events.EventDetailsPage"
             Title="Event Details">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Event Image -->
            <Border
                StrokeThickness="0"
                HeightRequest="300">
                <ffimageloading:CachedImage
                    x:Name="EventImage"
                    Aspect="AspectFill"
                    LoadingPlaceholder="placeholder.png"
                    ErrorPlaceholder="placeholder.png" />
            </Border>

            <!-- Event Content -->
            <VerticalStackLayout
                Padding="20"
                Spacing="20"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">

                <!-- Category Badge -->
                <Border
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="0"
                    BackgroundColor="{StaticResource Primary}"
                    Padding="12,6"
                    HorizontalOptions="Start">
                    <Label
                        x:Name="CategoryLabel"
                        TextColor="White"
                        FontSize="12"
                        FontAttributes="Bold" />
                </Border>

                <!-- Event Title -->
                <Label
                    x:Name="TitleLabel"
                    FontSize="26"
                    FontAttributes="Bold"
                    TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                <!-- Organizer -->
                <HorizontalStackLayout Spacing="10">
                    <Border
                        StrokeShape="RoundRectangle 20"
                        StrokeThickness="1"
                        Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}"
                        WidthRequest="40"
                        HeightRequest="40"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray800}}">
                        <Label
                            Text="ðŸ‘¤"
                            FontSize="20"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                    </Border>
                    <VerticalStackLayout VerticalOptions="Center">
                        <Label
                            Text="Organized by"
                            FontSize="12"
                            TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}" />
                        <Label
                            x:Name="OrganizerLabel"
                            FontSize="14"
                            FontAttributes="Bold"
                            TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>

                <!-- Event Details -->
                <VerticalStackLayout Spacing="15">
                    <HorizontalStackLayout Spacing="12">
                        <Label
                            Text="ðŸ“…"
                            FontSize="20" />
                        <VerticalStackLayout>
                            <Label
                                x:Name="DateLabel"
                                FontSize="15"
                                TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="12">
                        <Label
                            Text="ðŸ“"
                            FontSize="20" />
                        <Label
                            x:Name="LocationLabel"
                            FontSize="15"
                            TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="12">
                        <Label
                            Text="ðŸŽ«"
                            FontSize="20" />
                        <Label
                            x:Name="TicketsLabel"
                            FontSize="15"
                            TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Divider -->
                <BoxView
                    HeightRequest="1"
                    Color="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}" />

                <!-- Description -->
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="About Event"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                    <Label
                        x:Name="DescriptionLabel"
                        FontSize="14"
                        LineHeight="1.5"
                        TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}" />
                </VerticalStackLayout>

                <!-- Divider -->
                <BoxView
                    HeightRequest="1"
                    Color="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}" />

                <!-- Ticket Types -->
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="Ticket Types"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                    <CollectionView
                        x:Name="TicketTypesCollectionView"
                        SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 10"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray800}}"
                                    Padding="15">
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                        <Label
                                            Grid.Column="0"
                                            Grid.Row="0"
                                            Text="{Binding Name}"
                                            FontSize="16"
                                            FontAttributes="Bold"
                                            TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                                        <Label
                                            Grid.Column="0"
                                            Grid.Row="1"
                                            Text="{Binding Description}"
                                            FontSize="13"
                                            TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
                                            Margin="0,5,0,0" />

                                        <Label
                                            Grid.Column="0"
                                            Grid.Row="2"
                                            Text="{Binding AvailableQuantity, StringFormat='{0} available'}"
                                            FontSize="12"
                                            TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}"
                                            Margin="0,5,0,0" />

                                        <Label
                                            Grid.Column="1"
                                            Grid.Row="0"
                                            Grid.RowSpan="3"
                                            Text="{Binding Price, StringFormat='GHâ‚µ {0:F2}'}"
                                            FontSize="18"
                                            FontAttributes="Bold"
                                            TextColor="{StaticResource Primary}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

    <!-- Buy Ticket Button -->
    <ContentPage.Resources>
        <Style TargetType="Button" x:Key="BuyButtonStyle">
            <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>
    </ContentPage.Resources>

    <Grid
        RowDefinitions="*,Auto"
        VerticalOptions="End">
        <Border
            Grid.Row="1"
            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
            Padding="20,15"
            Shadow="{Shadow Brush=Black, Offset='0,-2', Radius=10, Opacity=0.1}">
            <Button
                x:Name="BuyTicketButton"
                Text="Buy Ticket"
                Style="{StaticResource BuyButtonStyle}"
                HeightRequest="50"
                Clicked="OnBuyTicketClicked" />
        </Border>
    </Grid>

</ContentPage>
