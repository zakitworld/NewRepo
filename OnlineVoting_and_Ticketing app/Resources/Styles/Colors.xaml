<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Base Theme Colors -->
    <Color x:Key="Primary">#8B5CF6</Color> <!-- Electric Violet -->
    <Color x:Key="PrimaryDark">#7C3AED</Color>
    <Color x:Key="PrimaryLight">#A78BFA</Color>
    
    <Color x:Key="Secondary">#3B82F6</Color> <!-- Bright Blue -->
    <Color x:Key="SecondaryDark">#2563EB</Color>
    <Color x:Key="Tertiary">#F43F5E</Color> <!-- Vibrant Rose -->

    <!-- Status Colors -->
    <Color x:Key="Success">#10B981</Color> <!-- Green -->
    <Color x:Key="Error">#EF4444</Color> <!-- Red -->
    <Color x:Key="Warning">#F59E0B</Color> <!-- Amber -->
    <Color x:Key="Info">#3B82F6</Color> <!-- Blue -->

    <!-- Neutrals (Luxury Dark) -->
    <Color x:Key="Background">#0A0A0C</Color>
    <Color x:Key="Surface">#16161A</Color>
    <Color x:Key="SurfaceLight">#24242A</Color>
    
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#94A3B8</Color>
    <Color x:Key="TextPlaceholder">#475569</Color>

    <Color x:Key="Gray100">#F1F5F9</Color>
    <Color x:Key="Gray200">#E2E8F0</Color>
    <Color x:Key="Gray300">#CBD5E1</Color>
    <Color x:Key="Gray400">#94A3B8</Color>
    <Color x:Key="Gray500">#64748B</Color>
    <Color x:Key="Gray600">#475569</Color>
    <Color x:Key="Gray900">#0F172A</Color>
    <Color x:Key="Gray950">#020617</Color>

    <!-- Glassmorphism Brushes -->
    <SolidColorBrush x:Key="GlassBrush" Color="#20FFFFFF"/>
    <SolidColorBrush x:Key="GlassBorderBrush" Color="#30FFFFFF"/>
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

</ResourceDictionary>