<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineVoting_and_Ticketing_app.MainPage"
             BackgroundColor="{StaticResource Background}">

    <Grid>
        <!-- Background Accents -->
        <Ellipse WidthRequest="400" HeightRequest="400" 
                 Fill="{StaticResource Primary}" 
                 Opacity="0.1" VerticalOptions="Start" 
                 HorizontalOptions="Start" Margin="-200,-200,0,0">
            <Ellipse.Shadow>
                <Shadow Brush="{StaticResource Primary}" Radius="100" Opacity="0.3"/>
            </Ellipse.Shadow>
        </Ellipse>

        <ScrollView>
            <VerticalStackLayout Padding="25,40" Spacing="30">

                <!-- Header Section -->
                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Border WidthRequest="60" HeightRequest="60" 
                            StrokeShape="RoundRectangle 30" 
                            StrokeThickness="0" 
                            BackgroundColor="{StaticResource Surface}">
                        <Label Text="👋" FontSize="30" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Border>
                    <VerticalStackLayout VerticalOptions="Center">
                        <Label x:Name="WelcomeLabel" 
                               Text="Hello, Explorer" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="{StaticResource White}"/>
                        <Label Text="What's your plan for today?" 
                               TextColor="{StaticResource TextSecondary}" 
                               FontSize="14"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>

                <!-- Featured Card (Promotion/Info) -->
                <Border Style="{StaticResource Border}" Padding="0" HeightRequest="180">
                    <Grid>
                        <Image Source="dotnet_bot.png" Aspect="AspectFill" Opacity="0.4"/>
                        <Rectangle Fill="{StaticResource PrimaryBrush}" Opacity="0.6"/>
                        <VerticalStackLayout VerticalOptions="End" Padding="20" Spacing="5">
                            <Label Text="UPCOMING EVENTS" FontSize="10" FontAttributes="Bold" TextColor="{StaticResource White}" Opacity="0.8"/>
                            <Label Text="Tech Conference 2026" FontSize="22" FontAttributes="Bold" TextColor="{StaticResource White}"/>
                            <Label Text="Join the biggest talk of the year!" FontSize="12" TextColor="{StaticResource White}"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- Action Grid -->
                <VerticalStackLayout Spacing="15">
                    <Label Text="Browse Categories" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{StaticResource White}"/>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="15">

                        <!-- Events -->
                        <Border Grid.Row="0" Grid.Column="0" 
                                Style="{StaticResource Border}" 
                                Padding="15" HeightRequest="140">
                            <VerticalStackLayout Spacing="12" VerticalOptions="Center">
                                <Label Text="📅" FontSize="36" HorizontalOptions="Center"/>
                                <Label Text="Events" HorizontalOptions="Center" 
                                       FontAttributes="Bold" TextColor="{StaticResource White}"/>
                            </VerticalStackLayout>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnEventsCardTapped"/>
                            </Border.GestureRecognizers>
                        </Border>

                        <!-- Polls -->
                        <Border Grid.Row="0" Grid.Column="1" 
                                Style="{StaticResource Border}" 
                                Padding="15" HeightRequest="140">
                            <VerticalStackLayout Spacing="12" VerticalOptions="Center">
                                <Label Text="📊" FontSize="36" HorizontalOptions="Center"/>
                                <Label Text="Polls" HorizontalOptions="Center" 
                                       FontAttributes="Bold" TextColor="{StaticResource White}"/>
                            </VerticalStackLayout>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnPollsCardTapped"/>
                            </Border.GestureRecognizers>
                        </Border>

                        <!-- Tickets -->
                        <Border Grid.Row="1" Grid.Column="0" 
                                Style="{StaticResource Border}" 
                                Padding="15" HeightRequest="140">
                            <VerticalStackLayout Spacing="12" VerticalOptions="Center">
                                <Label Text="🎫" FontSize="36" HorizontalOptions="Center"/>
                                <Label Text="My Tickets" HorizontalOptions="Center" 
                                       FontAttributes="Bold" TextColor="{StaticResource White}"/>
                            </VerticalStackLayout>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnTicketsCardTapped"/>
                            </Border.GestureRecognizers>
                        </Border>

                        <!-- Profile -->
                        <Border Grid.Row="1" Grid.Column="1" 
                                Style="{StaticResource Border}" 
                                Padding="15" HeightRequest="140">
                            <VerticalStackLayout Spacing="12" VerticalOptions="Center">
                                <Label Text="👤" FontSize="36" HorizontalOptions="Center"/>
                                <Label Text="Account" HorizontalOptions="Center" 
                                       FontAttributes="Bold" TextColor="{StaticResource White}"/>
                            </VerticalStackLayout>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnProfileCardTapped"/>
                            </Border.GestureRecognizers>
                        </Border>
                    </Grid>
                </VerticalStackLayout>

                <!-- Content/Info Section -->
                <Border Style="{StaticResource Border}" Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Quick Tips" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="•" TextColor="{StaticResource Primary}"/>
                                <Label Text="Enable notifications for event updates" TextColor="{StaticResource TextSecondary}" FontSize="13"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="•" TextColor="{StaticResource Primary}"/>
                                <Label Text="Verify your payment method in profile" TextColor="{StaticResource TextSecondary}" FontSize="13"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="•" TextColor="{StaticResource Primary}"/>
                                <Label Text="QR codes are scanned at the entrance" TextColor="{StaticResource TextSecondary}" FontSize="13"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
